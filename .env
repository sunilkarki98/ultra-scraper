# ===========================
# üåç Core App Config
# ===========================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ===========================
# üß† Resource Management (Auto-Scaling)
# ===========================
# Leave CONCURRENCY commented out to let the app calculate it automatically based on RAM/CPU.
# CONCURRENCY=3

# If deploying to Docker/Cloud, set these limits to match your container size.
# Example: 512, 1024, 4096
MAX_MEMORY_MB=4096

# Example: 1, 2, 4
MAX_CPU_CORES=2

# Safety Buffer: Only use 80% of available resources (Prevents crashes)
RESOURCE_UTILIZATION_PCT=80

# ===========================
# üï∑Ô∏è Scraping Engine
# ===========================
HEADLESS=true
# Set to 'true' if you want to run Headful mode even in production (requires XVFB)
FORCE_HEADFUL=false

# Timeout in milliseconds (30s)
# Changed from REQUEST_TIMEOUT to match config code
SCRAPE_TIMEOUT=30000

# How many times to retry navigation before failing
# Changed from MAX_RETRIES to match config code
GOTO_RETRIES=3

# Performance & Stealth
BLOCK_ASSETS=true
ROTATE_UA=true

# ===========================
# üì¶ Redis (BullMQ)
# ===========================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
# Or use a full URL:
# REDIS_URL=redis://default:pass@host:port

# ===========================
# üõ°Ô∏è Network & Proxies
# ===========================
# 1. Default Proxy (Used if no specific proxy is passed in request)
PROXY_URL=

# 2. Proxy Rotation List (Comma separated)
# Changed from PROXY_LIST to PROXIES to match config code
PROXIES=http://user:pass@ip1:port,http://user:pass@ip2:port

# ===========================
# ü§ñ External Services (Future Use)
# ===========================
OPENAI_API_KEY=
CAPTCHA_API_KEY=