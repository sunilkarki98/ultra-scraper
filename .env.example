# ============================================
# Ultra-Scraper Environment Configuration
# ============================================

# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=production

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=your-secure-password-here

# ============================================
# Scraper Settings
# ============================================
HEADLESS=true
CONCURRENCY=5
BLOCK_ASSETS=true

# Resource Limits
MAX_MEMORY_MB=4096
MAX_CPU_CORES=2

# ============================================
# Security
# ============================================
# Minimum 32 characters for production
WEBHOOK_SECRET=change-me-to-a-secure-random-string-min-32-chars

# ============================================
# Optional: AI Features
# ============================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# Optional: Proxy Configuration
# ============================================
# PROXY_URL=http://user:pass@proxy-server:8080
# PROXIES=http://proxy1:8080,http://proxy2:8080

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
